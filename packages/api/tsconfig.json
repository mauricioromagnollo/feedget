{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": false,
    "target": "es2020",
    "module": "commonjs",
    "rootDirs": ["./src", "./tests"],
    "outDir": "./dist",
  }
}
